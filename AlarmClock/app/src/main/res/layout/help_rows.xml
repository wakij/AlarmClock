<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6E6C6C"
    android:orientation="vertical">


    <fragment
        android:id="@+id/OfficialTwitter"
        android:name="com.example.alarmclock.default_row_in_help"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:tag="公式Twitter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/FAQ"
        android:name="com.example.alarmclock.default_row_in_help"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:tag="FAQ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OfficialTwitter" />

    <fragment
        android:id="@+id/Query"
        android:name="com.example.alarmclock.default_row_in_help"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:tag="お問い合わせ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FAQ" />

    <fragment
        android:id="@+id/rule"
        android:name="com.example.alarmclock.default_row_in_help"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:tag="利用規約/その他"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Query" />

    <fragment
        android:id="@+id/version"
        android:name="com.example.alarmclock.default_row_in_help"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:tag="バージョン情報"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rule" />


</androidx.constraintlayout.widget.ConstraintLayout>