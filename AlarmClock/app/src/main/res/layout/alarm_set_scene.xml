<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrain_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6e4f0"
    android:padding="15dp"
    tools:context=".AlarmSetScene">


    <com.example.alarmclock.CustomTimePicker
        android:id="@+id/time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg"
        app:layout_constraintBottom_toTopOf="@+id/editContents"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <EditText
        android:id="@+id/editContents"
        style="@style/CustomEditText"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/white_bg"
        android:hint="起きてから何やるー？"
        android:importantForAutofill="no"
        android:inputType="textMultiLine|text"
        android:maxLines="2"
        android:singleLine="true"
        android:textColorHint="#9E9C9C"
        android:textSize="20dp"
        android:textStyle="bold"
        android:theme="@style/CustomEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_picker" />


<!--Color部分-->
    <TextView
        android:id="@+id/color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/editContents"
        app:layout_constraintStart_toStartOf="parent"
         />

    <Button
        android:id="@+id/red"
        android:layout_width="52dp"
        android:layout_height="50dp"
        app:backgroundTint="#A11414"
        app:layout_constraintBottom_toTopOf="@+id/music_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/blue"
        app:layout_constraintTop_toBottomOf="@+id/color_text"/>

    <Button
        android:id="@+id/blue"
        android:layout_width="52dp"
        android:layout_height="50dp"
        app:backgroundTint="#15619E"
        app:layout_constraintStart_toEndOf="@+id/red"
        app:layout_constraintEnd_toStartOf="@+id/green"
        app:layout_constraintTop_toBottomOf="@+id/color_text"

         />

    <Button
        android:id="@+id/green"
        android:layout_width="52dp"
        android:layout_height="50dp"
        app:backgroundTint="#0D7E73"
        app:layout_constraintBottom_toTopOf="@+id/music_text"
        app:layout_constraintStart_toEndOf="@+id/blue"
        app:layout_constraintEnd_toStartOf="@+id/yellow"
        app:layout_constraintTop_toBottomOf="@+id/color_text"/>

    <Button
        android:id="@+id/yellow"
        android:layout_width="52dp"
        android:layout_height="50dp"
        app:backgroundTint="#91840F"
        app:layout_constraintEnd_toStartOf="@+id/purple"
        app:layout_constraintStart_toEndOf="@+id/green"
        app:layout_constraintTop_toBottomOf="@+id/color_text"
        app:layout_constraintBottom_toTopOf="@+id/music_text"/>


    <Button
        android:id="@+id/purple"
        android:layout_width="52dp"
        android:layout_height="50dp"
        app:backgroundTint="#640B73"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/yellow"
        app:layout_constraintTop_toBottomOf="@+id/color_text"
        app:layout_constraintBottom_toTopOf="@+id/music_text"/>

<!--    ーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーー-->

    <TextView
        android:id="@+id/music_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/music1"
        app:layout_constraintTop_toBottomOf="@+id/red"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/music1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/music2"
        app:layout_constraintBottom_toTopOf="@+id/backbtn"
        app:layout_constraintTop_toBottomOf="@+id/music_text"/>

    <Button
        android:id="@+id/music2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@id/music3"
        app:layout_constraintStart_toEndOf="@+id/music1"
        app:layout_constraintTop_toBottomOf="@+id/music_text"
        app:layout_constraintBottom_toTopOf="@id/backbtn"/>

    <Button
        android:id="@+id/music3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/music2"
        app:layout_constraintBottom_toTopOf="@+id/backbtn"
        app:layout_constraintTop_toBottomOf="@+id/music_text"/>

    <Button
        android:id="@+id/backbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/backbtnbg"
        android:letterSpacing="0.3"
        android:onClick="onBack"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="#737070"
        android:textSize="22dp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/setbtn"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/music1" />

    <Button
        android:id="@+id/setbtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/setbtnbg"
        android:letterSpacing="0.3"
        android:onClick="btnReg_onClick"
        android:text="Enter"
        android:textAllCaps="false"
        android:textColor="#f6f6f6"
        android:textSize="22dp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/backbtn"
        app:layout_constraintTop_toBottomOf="@+id/music1" />




</androidx.constraintlayout.widget.ConstraintLayout>