<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/question_back"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/upperline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:text="@string/default_question"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/question_back"
            app:layout_constraintStart_toStartOf="@+id/question_back"
            app:layout_constraintTop_toTopOf="@+id/question_back" />

    <ImageView
        android:id="@+id/plus_icon"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/question_back"
        app:layout_constraintEnd_toEndOf="@+id/question_back"
        app:layout_constraintTop_toTopOf="@+id/question_back"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <ImageView
        android:id="@+id/question_icon"
        android:layout_width="40dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/question_back"
        app:layout_constraintStart_toStartOf="@+id/question_back"
        app:layout_constraintTop_toTopOf="@+id/question_back"
        app:srcCompat="@android:drawable/ic_menu_help" />

    <ImageView
        android:id="@+id/answer_back"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/upperline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_back"/>

        <TextView
            android:id="@+id/answer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:text="@string/default_answer"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/answer_back"
            app:layout_constraintStart_toStartOf="@+id/answer_back"
            app:layout_constraintTop_toTopOf="@+id/answer_back" />

    <ImageView
        android:id="@+id/minus_icon"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/answer_back"
        app:layout_constraintEnd_toEndOf="@id/answer_back"
        app:layout_constraintTop_toTopOf="@+id/answer_back"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <ImageView
            android:id="@+id/answer_icon"
            android:layout_width="40dp"
            android:layout_height="15dp"
            app:srcCompat="@drawable/arrow2"
            app:layout_constraintTop_toTopOf="@+id/answer_back"
            app:layout_constraintBottom_toBottomOf="@+id/answer_back"
            app:layout_constraintStart_toStartOf="@+id/answer_back"/>



</androidx.constraintlayout.widget.ConstraintLayout>