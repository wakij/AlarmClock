<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/teal_200</item>
    </style>

<!--    Lightモード-->
    <style name="CustomSwitch" parent="Theme.AppCompat.Light">　
        <item name="colorControlActivated">#ececec</item>
<!--        <item name="colorControlActivated">#ff0000</item>-->
<!--        <item name="android:colorForeground">#9C19E0</item>-->
<!--        <item name="colorControlNormal">#ffff00</item>-->
