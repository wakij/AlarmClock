    <style name="CustomTimePicker" parent="Theme.AppCompat.Light">
        <item name="android:timePickerMode" tools:targetApi="lollipop">spinner</item>
        <item name="android:textSize">40dp</item>
        <item name="colorControlNormal">#0000ffff</item>
